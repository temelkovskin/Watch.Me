<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    <link href="~/Content/nav.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


<div class="drop-down">
    <div class="logo">
        @Html.ActionLink("Logo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <nav role='navigation' class="top_menu">

        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>

            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </ul>
       
    </nav>
</div>
            <div class="menu">
                <a class="trigger" href="#">&equiv;</a>
                <a class="close" href="#">&times;</a>
            </div>
          

    <div class="container body-content">
        @RenderBody()
       

        <div class="footer">
            <div id="button"></div>
            <div id="container">
                <div id="cont">
                    <div class="footer_center">
                        <h3>&copy; @DateTime.Now.Year - Jungle Monkeys</h3>
                    </div>
                </div>
            </div>
        </div>
        @*<footer>
            <p></p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/nav.js"></script>
</body>
</html>
